<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Nedium" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">#fff</item>
    </style>


    <style name="Theme.Nedium.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Nedium.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Nedium.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="Theme.Nedium.Light" parent="Theme.Nedium.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <!-- Dark theme -->
    <style name="Theme.Nedium.Dark" parent="Theme.Nedium.NoActionBar">
        <item name="android:statusBarColor">#000</item>
    </style>

    <!-- Black theme -->
    <style name="Theme.Nedium.Black" parent="Theme.Nedium.NoActionBar">
        <item name="android:statusBarColor">#000</item>
    </style>

</resources>