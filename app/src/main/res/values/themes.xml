<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Nedium" parent="Theme.AppCompat.Light"/>



    <!-- Light theme -->
    <style name="Theme.Nedium.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">#fff</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!-- Dark theme -->
    <style name="Theme.Nedium.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">#121212</item>
    </style>

    <!-- Black theme -->
    <style name="Theme.Nedium.Black" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">#000</item>
    </style>

</resources>